+        PATTERN ".svn" EXCLUDE
+        PATTERN "*.in" EXCLUDE)
+   MESSAGE("Installing sip files in this build pass")
+ELSE(DEFAULT_PYTHON_VERSION)
+   MESSAGE("Not installing sip files in this build pass")
+ENDIF(NOT DEFAULT_PYTHON_VERSION)
 
